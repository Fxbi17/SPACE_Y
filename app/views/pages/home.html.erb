<% content_for :banner do %>
  <%= render '/shared/banner' %>
<% end %>

<div class="row">
  <div class="col-6 text-center">
    <% @spaceships.each do |spaceship| %>
      <div class="card text-white mb-3">
        <% if spaceship.image.attached? %>
          <%= cl_image_tag(spaceship.image.key, crop: :fill, class: "card-img card-spaceship-img") %>
        <% end %>
        <div class="card-img-overlay" >
          <h5 class="card-title"><%= link_to spaceship.name, spaceship_path(spaceship), class: "btn btn-light text-center" %></h5>
        </div>
      </div>
    <% end %>
  </div>
  <div class="col-6">
    <div style="width: 100%; height: 100%;"
      data-controller="map"
      data-map-markers-value="<%= @markers.to_json %>"
      data-map-api-key-value="<%= ENV["MAPBOX_API_KEY"] %>">
    </div>
  </div>
</div>
