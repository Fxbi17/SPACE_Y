<h4>Spaceship Name</h4>
<h1><%= @spaceship.name %></h1>

<div class="row">
  <div class="col-6">
    <img src="https://www.denofgeek.com/wp-content/uploads/2016/01/naboo-starfighter.jpg" class="card-img-top" alt="...">
    <h1 class="card-title"><%= @spaceship.name %></h1>
    <p class="card-text"><%= @spaceship.description %></p>
    <a href="<%= new_spaceship_booking_path(@spaceship) %>" class="btn btn-dark">Book now !</a>
  </div>
  <div class="col-6">
    <%# Mapbox %>
    <div style="width: 100%; height: 600px;"
      data-controller="map"
      data-map-markers-value="<%= @markers.to_json %>"
      data-map-api-key-value="<%= ENV["MAPBOX_API_KEY"] %>">
    </div>
    <%# <img src="https://wallpapershome.com/images/pages/pic_v/17861.jpg" alt="..."> %>
  </div>
</div>

<br><br><br>

<h4>Address</h4>
<p><%= @spaceship.address %></p><br>

<h4>Price</h4>
<p><%= @spaceship.price %>$</p><br>
